{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "worldbeyond:limestone_pillar",
			"properties": {
				"worldbeyond:facing_direction": [
					0,
					1,
					2
				]
			}
		},
		"components": {
			"minecraft:friction": 0.6,
			"minecraft:destroy_time": 2.0,
            "minecraft:explosion_resistance": 6.0,
			"minecraft:map_color": "#7D7B71",
			"minecraft:unit_cube": {},
			"minecraft:material_instances": {
				"up": {
					"texture": "limestone_pillar_top",
					"render_method": "opaque"
				},
				"down": {
					"texture": "limestone_pillar_top",
					"render_method": "opaque"
				},
				"side": {
					"texture": "limestone_pillar_side",
					"render_method": "opaque"
				},
				"north": "side",
				"south": "side",
				"west": "side",
				"east": "side"
			},
			"minecraft:on_player_placing": {
				"event": "update_facing_direction"
			},
			"minecraft:creative_category": {
				"group": "itemGroup.name.stoneBrick",
				"category": "construction"
			},
            "tag:stone": {}
		},
		"events": {
			"update_facing_direction": {
				"set_block_property": {
					"worldbeyond:facing_direction": "math.floor(query.cardinal_block_face_placed_on / 2.0)"
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('worldbeyond:facing_direction') == 0",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						0
					]
				}
			},
			{
				"condition": "query.block_property('worldbeyond:facing_direction') == 1",
				"components": {
					"minecraft:rotation": [
						90,
						0,
						0
					]
				}
			},
			{
				"condition": "query.block_property('worldbeyond:facing_direction') == 2",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						90
					]
				}
			}
		]
	}
}