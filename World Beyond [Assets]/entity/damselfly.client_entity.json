{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "wormwood:damselfly",
      "materials": {
        "default": "entity_alphatest",
        "wing": "entity_alphablend"
      },
      "textures": {
        "default": "textures/entity/damselfly/blue",
        "green": "textures/entity/damselfly/green",
        "gray": "textures/entity/damselfly/gray"
      },
      "geometry": {
        "default": "geometry.damselfly"
      },
      "animations": {
        //single animation. Had been using multiple, alongside a controller, but found that withe the right queries, I could get away with just using the one.
        "flying": "animation.damselfly.fly"
      },
      "particle_effects": {
        "nectar_dripping": "minecraft:nectar_drip_particle"
      },
      "scripts": {
        "animate": [
          {
            "flying": "query.is_moving" //"query.is_moving" here could potentially be removed, so that the animation is constantly playing, but the wing rotation
          }                             //is dependant on slightly reworked math and queries within the animation itself.
        ]
      },
      "render_controllers": [
        "controller.render.damselfly"
      ],
      "spawn_egg": {
        "texture": "egg_bee",
        "texture_index": 0
      }
    }
  }
}